{
  "extends": [
    "config:base"
  ],
  "schedule": [
    "after 8am every weekday",
    "before 2pm every weekday"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ],
  "dependencyDashboard": false,
  "enabledManagers": [
    "dockerfile",
    "docker-compose",
    "pip_requirements",
    "github-actions"
  ],
  "timezone": "Europe/Stockholm"
}
