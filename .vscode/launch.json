  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask reload",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { "FLASK_APP": "discord_twitter_webhooks.main.py", "FLASK_DEBUG": "1" },
      "args": ["run", "--no-debugger", "--reload"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Flask no reload",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { "FLASK_APP": "discord_twitter_webhooks.main.py", "FLASK_DEBUG": "1" },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Run bot",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/discord_twitter_webhooks/main.py",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
